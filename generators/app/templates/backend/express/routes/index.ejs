import express from 'express';

const router = express.Router();

// Route d'accueil
router.get('/', (req, res) => {
  res.json({
    message: 'API <%= projectName %>',
    version: '<%= version %>',
    endpoints: {
      health: '/health',
      api: '/api'
    }
  });
});

// Route de santÃ©
router.get('/health', (req, res) => {
  res.json({
    status: 'OK',
    service: '<%= projectName %>',
    timestamp: new Date().toISOString(),
    uptime: process.uptime()
  });
});

export default router; 